package "novex/arbor"

import "novex/arbor/tree/nodes/Node"
import "novex/arbor/tree/nodes/Program"

class SyntaxErrorException extends Exception {
    public construct() {}
    
    public construct(String message, Node node = null, Program program = null) {
        super(message)
        
        node = node ?: program
        
        if (node && node.program) {
            node.program.compiler.errors.add(message)
        }
    }
}